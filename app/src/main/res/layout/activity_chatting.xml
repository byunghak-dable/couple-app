<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChattingActivity">

    <TextView
        android:id="@+id/topBarTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mainBackground"
        android:contentDescription="@string/background"
        android:gravity="center|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/opponent"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chattingBox"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chattingBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/chattingInputET"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarTV" />

    <EditText
        android:id="@+id/chattingInputET"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:autofillHints=""
        android:background="@color/transparency"
        android:hint="@string/chat"
        android:inputType="text"
        android:paddingStart="60dp"
        android:paddingEnd="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chattingBox" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/transparency"
        android:src="@drawable/ic_add_black_30dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@id/chattingInputET"
        app:layout_constraintLeft_toLeftOf="@id/chattingInputET"
        app:layout_constraintTop_toTopOf="@id/chattingInputET" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:backgroundTint="@color/mainBackground"
        android:src="@drawable/ic_send_black_30dp"
        app:layout_constraintBottom_toBottomOf="@id/chattingInputET"
        app:layout_constraintRight_toRightOf="@id/chattingInputET"
        app:layout_constraintTop_toTopOf="@id/chattingInputET" />

</androidx.constraintlayout.widget.ConstraintLayout>