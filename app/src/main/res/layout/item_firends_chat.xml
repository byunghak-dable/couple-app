<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/friendCoupleTV"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="start"
        android:paddingStart="80dp"
        android:paddingTop="5dp"
        android:paddingEnd="60dp"
        android:paddingBottom="5dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/messageTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/message"
        app:layout_constraintBottom_toBottomOf="@id/friendCoupleTV"
        app:layout_constraintLeft_toLeftOf="@id/friendCoupleTV"
        app:layout_constraintRight_toRightOf="@id/friendCoupleTV"
        app:layout_constraintTop_toTopOf="@id/friendCoupleTV" />

    <ImageView
        android:contentDescription="@string/profileImage"
        android:id="@+id/profileFirstIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_person_add_black_40dp"
        app:layout_constraintBottom_toBottomOf="@id/friendCoupleTV"
        app:layout_constraintLeft_toLeftOf="@id/friendCoupleTV"
        app:layout_constraintTop_toTopOf="@id/friendCoupleTV" />

    <ImageView
        android:contentDescription="@string/profileImage"
        android:id="@+id/profileSecondIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_person_add_black_40dp"
        app:layout_constraintBottom_toBottomOf="@id/friendCoupleTV"
        app:layout_constraintLeft_toLeftOf="@id/friendCoupleTV"
        app:layout_constraintTop_toTopOf="@id/friendCoupleTV" />
    
</androidx.constraintlayout.widget.ConstraintLayout>